{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Launch Frontend",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "expo",
        "run:android"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "java",
      "name": "Launch Backend",
      "request": "launch",
      "mainClass": "com.lazyspender.backend.BackendApplication",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "args": "",
      "vmArgs": "-Dspring.profiles.active=dev -XX:+ShowCodeDetailsInExceptionMessages",
      "console": "integratedTerminal",
      "env": {
        "SPRING_OUTPUT_ANSI_ENABLED": "ALWAYS"
      },
    }
  ]
}