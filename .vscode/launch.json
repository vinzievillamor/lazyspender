{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Launch Backend (Spring Boot)",
      "request": "launch",
      "mainClass": "com.lazyspender.backend.BackendApplication",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "SPRING_PROFILES_ACTIVE": "dev"
      },
      "args": "",
      "vmArgs": "-Dspring.devtools.restart.enabled=true"
    },
    {
      "type": "node",
      "name": "Launch Frontend (Expo)",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
